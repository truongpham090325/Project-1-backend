extends ../layouts/default.pug

block main
  h1.box-title Thùng rác nhóm quyền

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(change-multi data-api=`/${pathAdmin}/setting/role/change-multi`)
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="undo") Khôi phục
            option(value="destroy") Xóa vĩnh viễn
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search)
      .inner-button-create
        a(href=`/${pathAdmin}/setting/role/list`) Quay lại danh sách
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Tên nhóm quyền
            th Mô tả ngắn
            th Hành động
        tbody
          each item in roleList
            tr
              td(class="inner-center")
                input(type="checkbox" class="inner-check" check-item=item.id)
              td #{item.name}
              td #{item.description}
              td
                .inner-buttons
                  button(
                    class="inner-undo"
                    button-undo
                    data-api=`/${pathAdmin}/setting/role/undo/${item.id}`
                    ) <i class="fa-solid fa-rotate-left"></i>
                  button(
                    class="inner-delete"
                    button-destroy
                    data-api=`/${pathAdmin}/setting/role/destroy/${item.id}`
                    ) <i class="fa-regular fa-trash-can"></i>
  //- End Section 6